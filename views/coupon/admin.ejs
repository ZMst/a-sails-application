<section class="section">
    <div class="container">
        <h1 class="title">Coupon</h1>
        <h2 class="subtitle">
            Gain coins and use them for coupons!
        </h2>
    </div>
</section>

<table class="table is-bordered is-striped is-hoverable is-fullwidth">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Restaurant</th>
        <th></th>
    </tr>
    <% coupons.forEach(function(coupon) { %>
        <tr>
            <td><%= coupon.id %></td>
            <td><%= coupon.title %></td>
            <td><%= coupon.restaurant %></td>
            <td><a class="is-link" href="/update/<%= coupon.id %>">Update</a></td>
        </tr>
    <% }); %>

</table>